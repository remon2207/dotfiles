/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       #161821;
    text-color:             #c6c8d1;
	font:				 	"IBM Plex Sans JP 10";
}

window {
    width:      			225px;
    padding:    			25px;
    border:					0px 0px 2px 0px;
    border-radius:          0px;
    border-color:           #c6c8d1;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				#c6c8d1;
}
